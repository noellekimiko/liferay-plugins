#set ($content_id = $reserved-article-id.getData())
#set ($content_class = "multiple-items-${content_id}-link")
#set ($namespace = $request.get("portlet-namespace"))
#set ($portlet_id = "p_p_id${namespace}")
#set ($date_DateObj = $dateUtil.newDate($getterUtil.getLong($date.getData())))

<style type="text/css">
	#${portlet_id} .portlet-content {
		padding: 0 10px 10px;
	}

	#${content_class} .link-post-url {
		background: rgba(0,0,0, 0.4);
		display: block;
		margin-right: 0;
		padding: 20px;
		text-align: center;
	}

	#${content_class} .link-post-url h1 {
		color: #FFF;
	}

	#${content_class} .link-post-url:focus, #${content_class} .link-post-url:hover {
		text-decoration: none;
	}
</style>

<div id="$content_class">
	<h5> posted $dateUtil.getDate($date_DateObj, "dd MMM yyyy", $locale) in
		<a href="$category.getData()"> $category.getData() </a>
	</h5>

	<a href="$URL.getData()" class="link-post-url">
		<div>
			#if ($URL_label.data != "")
				<h1> $URL_label.getData() </hl>

				<h4>$URL.getData()</h4>
			#else
				<h4> $URL.getData() </h4>
			#end
		</div>
	</a>

	<p>$body.getData()</p>
</div>